<%- include('../partials/metadata') %>
  <%- include('../partials/header') %>


    <main>
      <form action="/users/edit/<%= userParaEditar.id %> ?_method=PUT" method="POST" enctype="multipart/form-data">
        <!-- Se modifica el Method PUT para editar, desde el action usando el method-override instalado en dependencias para editar formularios -->
        <section class="form-register">
          <div class="logo1">
            <a href="/">
              <img src="\images\completo-XLR8-mediano.png">
            </a>
          </div>
          <h4> EDITANDO MI USUARIO <%= userParaEditar.name %>
          </h4>
          <input class="controls" type="name" name="name" id="nombres" value=<%= userParaEditar.name %>>
          <input class="controls" type="apellido" name="lastName" id="apellido"
            value=<%= userParaEditar.lastName %>>
          <input class="controls" type="email" name="email" id="correo" value=<%= userParaEditar.email %>>
          <input class="controls" type="text" name="phone" id="telefono" value=<%= userParaEditar.phone %>>
                <input class=" controls" type="password" name="password1" id="password"
            value=<%= userParaEditar.password1 %>>
          <input class="controls" type="password" name="password2" id="password">
          <p>Fecha de nacimiento: <input type="date" name="date" value=<%= userParaEditar.date %>></p>
          </br>

          <label>Seleccione su género:</label>
          <div>
            <input type="radio" id="genero" name="genre" value="<%= userParaEditar.genre %>">
            <label for="Masculino">Masculino</label>
          </div>

          <div>
            <input type="radio" id="genero" name="genre" value="<%= userParaEditar.genre %>">
            <label for="Femenino">Femenino</label>
          </div>

          <div>
            <input type="radio" id="genero" name="genre" value="<%= userParaEditar.genre %>">
            <label for="Sin genero">Sin género</label>
          </div>

          <h5>Estoy de acuerdo con <a href="#">Terminos y Condiciones</a></h5>
          <button class="botons" type="submit"> EDITAR </button>


        </section>
      </form>
    </main>

    <%- include('../partials/footer') %>