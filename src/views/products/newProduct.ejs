<%- include('../partials/metadata') %>
    <%- include('../partials/header') %>


        <main>
            <form id="newproduct-form" action="/products/create" method="POST" enctype="multipart/form-data" >
                <!-- NO VA /GUARDAR la ruta ? -->
                <!--enctype="multipart/form-data"-->
                <section class="form-register" >
                    <div class="logo1">
                        <a href="/">
                            <img src="\images\completo-XLR8-mediano.png">
                        </a>
                    </div>     
                </div>
                <div id="errors">
                </div>
            </br>
                    <h4>NUEVO PRODUCTO</h4>
                    <div class="errors-form">
                        <% if (locals && locals.errorMsg) { %>
                          <% for (let error in errorMsg ) { %>
                            <p class="errors-form"> <%= errorMsg[error].msg %> </p>          
                          <% } %>
                        <% } %>
                    </div>  
                    <input id="title" class="controls" type="text" name="title" id="tituloProducto" placeholder="tituloProducto" value="<%= locals.old && old.title ? old.title : ''%>">
                    <br>
                    <input class="agregar-foto" type="file" name="img1" accept=".jpg, .png, .jpeg" placeholder="Agregar Foto Frente">
                    
                    <!-- <input class="agregar-foto" type="file" name="img2" accept=".jpg, .png, .jpeg"
                        placeholder="Agregar Foto Frente">
                    <input class="agregar-foto" type="file" name="img3" accept=".jpg, .png, .jpeg"
                        placeholder="Agregar Foto Frente">  ESTO VA COMENTADO, POR EL MOMENTO SOLO 1 FOTO POR PRODUCTO PARA EVITAR CONFLICTO DE MULTER Y VALIDACIONES.-->
                    <br>
                    <textarea id="description" name="description" rows="10" placeholder="description" value="<%= locals.old && old.description ? old.description : ''%>"> </textarea>
                    <input id="price" class="controls" type="number" name="price" placeholder="Precio" value="<%= locals.old && old.price ? old.price : ''%>">
                    <input id="price_discount  class="controls" type="number" name="price_discount" placeholder="Precio Promocional" value="<%= locals.old && old.price_discount ? old.price_discount : ''%>">
                    <label id="size" for="talle">TALLE</label>
                    <select id="size" name="size">
                        <option id="size" value="small" <%= locals.old && old.size === 'small' ? 'selected' : '' %>>SMALL</option>
                        <option id="size" value="medium" <%= locals.old && old.size === 'medium' ? 'selected' : '' %>>MEDIUM</option>
                        <option id="size" value="large" <%= locals.old && old.size === 'large' ? 'selected' : '' %>>LARGE</option>
                        <option id="size" value="xl" <%= locals.old && old.size === 'xl' ? 'selected' : '' %>>XL</option>
                    </select>
                    <label id="color" for="color">COLOR</label>
                    <select id="color" name="color">
                        <option id="color" value="negro" <%= locals.old && old.color === 'negro' ? 'selected' : '' %>>NEGRO</option>
                        <option id="color" value="gris" <%= locals.old && old.color === 'gris' ? 'selected' : '' %>>GRIS</option>
                        <option id="color" value="blanco" <%= locals.old && old.color === 'blanco' ? 'selected' : '' %>>BLANCO</option>
                        <option id="color" value="color" <%= locals.old && old.color === 'color' ? 'selected' : '' %>>COLOR</option>
                    </select>
                    <div id="genre_product" class="genre">
                        <!-- REVISAR CSS -->
                        <p>CATEGORIAS </p>
                        <label>HOMBRE<input id="genre_product" type='radio' name='genre_product' value="hombre" <%= locals.old && old.genre_product === 'hombre' ? 'selected' : '' %>> </label>
                        </br>
                        <label>MUJER<input id="genre_product" type='radio' name='genre_product' value="mujer" <%= locals.old && old.genre_product === 'mujer' ? 'selected' : '' %>> </label>
                        </br>
                        <label>UNISEX<input id="genre_product" type='radio' name='genre_product' value="unisex" <%= locals.old && old.genre_product === 'unisex' ? 'selected' : '' %>> </label>
                        </br>
                    </div>
                    <div id="type" class="categories">
                        <p> TIPO DE PRENDA </p>
                        <label>REMERAS<input id="type" type='radio' name='type' value="remeras" <%= locals.old && old.type === 'remeras' ? 'selected' : '' %>> </label>
                        </br>
                        <label>PANTALONES<input id="type" type='radio' name='type' value="pantalones" <%= locals.old && old.type === 'pantalones' ? 'selected' : '' %>> </label>
                        </br>
                        <label>SHORTS<input id="type" type='radio' name='type' value="short" <%= locals.old && old.type === 'short' ? 'selected' : '' %>> </label>
                        </br>
                        
                    </div>
                    <div id="new" class="categories">
                        <p> NUEVO PRODUCTO </p>
                        <label>SI<input id="new" type='radio' name='new' value="0" <%= locals.old && old.new === '0' ? 'selected' : '' %>> </label>
                        </br>
                        <label>NO<input id="new" type='radio' name='new' value="1" <%= locals.old && old.new === '1' ? 'selected' : '' %>> </label>
                        </br>
                    </div>
                    <button class="botons" type="submit"> AGREGAR PRODUCTO</button>
                    <!-- <button class="botons" type="submit"> EDITAR PRODUCTO</button>
                    <button class="botons" type="submit"> ELIMINAR PRODUCTO </button> --> 

                </section>
            </form>
            <script src="/Javascript/ValidationNewProduct.js"></script>
        </main>

        <%- include('../partials/footer') %>