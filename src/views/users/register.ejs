<%- include('../partials/metadata') %>
  <%- include('../partials/header') %>


    <main>
      <form action="/users/register" method="POST" enctype="multipart/form-data">
        <section class="form-register">
          <div class="logo1">
            <a href="/">
              <img src="\images\completo-XLR8-mediano.png">
            </a>
          </div>
          <h4>Formulario de Registro</h4>
          <input type="file" name="avatar">
          <input class="controls" type="text" name="name" id="nombres" placeholder="Nombre">
          <input class="controls" type="text" name="lastName" id="apellido" placeholder="Apellido">
          <input class="controls" type="email" name="email" id="correo" placeholder="Correo Electrónico">
          <input class="controls" type="text" name="phone" id="telefono" placeholder="Teléfono">
          <input class="controls" type="password" name="password1" id="password"
            placeholder="Ingrese su Contraseña (Mínimo 8 caracteres)" minlength="8">
          <input class="controls" type="password" name="password2" id="password" placeholder="Reescriba su Contraseña"
            minlength="8">
          <fieldset>
            <p>Fecha de nacimiento: <input type="date" name="birthday" value="Fecha de nacimiento"></p>
          </fieldset>
          </br>
          <fieldset>
            <legend>Seleccione su género:</legend>
            <div>
              <input type="radio" id="genero" name="genre" value="Masculino">
              <label for="Masculino">Masculino</label>
            </div>

            <div>
              <input type="radio" id="genero" name="genre" value="Femenino">
              <label for="Femenino">Femenino</label>
            </div>

            <div>
              <input type="radio" id="genero" name="genre" value="Sin genero">
              <label for="Sin genero">Sin género</label>
            </div>
          </fieldset>
          </br>
          <h5>Estoy de acuerdo con <a href="#">Terminos y Condiciones</a></h5>
          <button class="botons" type="submit"> REGISTRARME </button>
          <h6><a href="/ingresar">¿Ya tienes una Cuenta?</a></h6>
        </section>
      </form>
    </main>

    <%- include('../partials/footer') %>