<%- include('../partials/metadata') %>
    <%- include('../partials/header') %>


        <main>
            <form action="/products/create" method="POST" enctype="multipart/form-data" >
                <!-- NO VA /GUARDAR la ruta ? -->
                <!--enctype="multipart/form-data"-->
                <section class="form-register" >
                    <div class="logo1">
                        <a href="/">
                            <img src="\images\completo-XLR8-mediano.png">
                        </a>
                    </div>
                    <% if (locals && locals.errorMsg) { %>
                        <% for (let error in errorMsg ) { %>                            
                                <p class="errors-form"> <%= errorMsg[error].msg %> </p>                            
                        <% } %>
                    <% } %>                     
                    
                    <h4>NUEVO PRODUCTO</h4>
                    <input class="controls" type="text" name="title" id="tituloProducto" placeholder="tituloProducto" value="<%= locals.old && old.title ? old.title : ''%>">
                    <input class="agregar-foto" type="file" name="img1" accept=".jpg, .png, .jpeg"
                        placeholder="Agregar Foto Frente">
                    <input class="agregar-foto" type="file" name="img2" accept=".jpg, .png, .jpeg"
                        placeholder="Agregar Foto Frente">
                    <input class="agregar-foto" type="file" name="img3" accept=".jpg, .png, .jpeg"
                        placeholder="Agregar Foto Frente">
                    <textarea id="controls" name="description" rows="10" id="descripcion-area"
                        placeholder="description" value="<%= locals.old && old.description ? old.description : ''%>"> </textarea>
                    <input class="controls" type="number" name="price" id="password" placeholder="Precio" value="<%= locals.old && old.price ? old.price : ''%>">
                    <input class="controls" type="number" name="price_discount" id="precio-promo"
                        placeholder="Precio Promocional" value="<%= locals.old && old.price_discount ? old.price_discount : ''%>">
                    <label for="talle">TALLE</label>
                    <select id="talle" name="size">
                        <option value="small" <%= locals.old && old.size === 'small' ? 'selected' : '' %>>SMALL</option>
                        <option value="medium" <%= locals.old && old.size === 'medium' ? 'selected' : '' %>>MEDIUM</option>
                        <option value="large" <%= locals.old && old.size === 'large' ? 'selected' : '' %>>LARGE</option>
                        <option value="xl" <%= locals.old && old.size === 'xl' ? 'selected' : '' %>>XL</option>
                    </select>
                    <label for="color">COLOR</label>
                    <select id="color" name="color">
                        <option value="negro" <%= locals.old && old.color === 'negro' ? 'selected' : '' %>>NEGRO</option>
                        <option value="gris" <%= locals.old && old.color === 'gris' ? 'selected' : '' %>>GRIS</option>
                        <option value="blanco" <%= locals.old && old.color === 'blanco' ? 'selected' : '' %>>BLANCO</option>
                        <option value="color" <%= locals.old && old.color === 'color' ? 'selected' : '' %>>COLOR</option>
                    </select>
                    <div class="genre">
                        <!-- REVISAR CSS -->
                        <p>CATEGORIAS </p>
                        <label>HOMBRE<input type='radio' name='genre_product' value="hombre" <%= locals.old && old.genre_product === 'hombre' ? 'selected' : '' %>> </label>
                        </br>
                        <label>MUJER<input type='radio' name='genre_product' value="mujer" <%= locals.old && old.genre_product === 'mujer' ? 'selected' : '' %>> </label>
                        </br>
                        <label>UNISEX<input type='radio' name='genre_product' value="unisex" <%= locals.old && old.genre_product === 'unisex' ? 'selected' : '' %>> </label>
                        </br>
                    </div>
                    <div class="categories">
                        <p> TIPO DE PRENDA </p>
                        <label>REMERAS<input type='radio' name='type' value="remeras" <%= locals.old && old.type === 'remeras' ? 'selected' : '' %>> </label>
                        </br>
                        <label>PANTALONES<input type='radio' name='type' value="pantalones" <%= locals.old && old.type === 'pantalones' ? 'selected' : '' %>> </label>
                        </br>
                        <label>SHORTS<input type='radio' name='type' value="short" <%= locals.old && old.type === 'short' ? 'selected' : '' %>> </label>
                        </br>
                        
                    </div>
                    <div class="categories">
                        <p> NUEVO PRODUCTO </p>
                        <label>SI<input type='radio' name='new' value="0" <%= locals.old && old.new === '0' ? 'selected' : '' %>> </label>
                        </br>
                        <label>NO<input type='radio' name='new' value="1" <%= locals.old && old.new === '1' ? 'selected' : '' %>> </label>
                        </br>
                    </div>
                    <button class="botons" type="submit"> AGREGAR PRODUCTO</button>
                    <!-- <button class="botons" type="submit"> EDITAR PRODUCTO</button>
                    <button class="botons" type="submit"> ELIMINAR PRODUCTO </button> --> 

                </section>
            </form>
        </main>

        <%- include('../partials/footer') %>