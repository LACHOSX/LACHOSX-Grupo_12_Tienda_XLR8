<%- include('../partials/metadata') %>
  <%- include('../partials/header') %>


    <main>
      <% if (locals && locals.errorMsg) { %>
        <% for (let error in errorMsg ) { %>
          <p class="errors-form"> <%= errorMsg[error].msg %> </p>          
        <% } %>
      <% } %> 
      
      <form action="/profile" method="post" enctype="multipart/form-data">
        <input type="file" name="avatar" />
      </form>
      <form action="/users/register" method="POST" enctype="multipart/form-data">
        <section class="form-register">
          <div class="logo1">
            <a href="/">
              <img src="\images\completo-XLR8-mediano.png">
            </a>
          </div>
          <h4>Formulario de Registro</h4>
          <fieldset>
            <legend>Seleccione su foto de perfil:</legend>
            <input type="file" name="avatar">
          </fieldset>
          <input class="controls" type="text" name="name" id="nombres" placeholder="Nombre" value="<%= locals.old && old.name ? old.name : ''%>">
          <input class="controls" type="text" name="last_name" id="apellido" placeholder="Apellido" value="<%= locals.old && old.last_name ? old.last_name : ''%>">
          <input class="controls" type="email" name="email" id="correo" placeholder="Correo Electrónico" value="<%= locals.old && old.email ? old.email : ''%>">
          <input class="controls" type="text" name="phone" id="telefono" placeholder="Teléfono" value="<%= locals.old && old.phone ? old.phone : ''%>">
          <input class="controls" type="password" name="password" id="password"
            placeholder="Ingrese su Contraseña (Mínimo 8 caracteres)" minlength="8">
          <input class="controls" type="password" name="password2" id="password" placeholder="Reescriba su Contraseña"
            minlength="8">
          <fieldset>
            <p>Fecha de nacimiento: <input type="date" name="birthday" value="Fecha de nacimiento"></p>
          </fieldset>
          </br>
          <fieldset>
            <legend>Seleccione su género:</legend>
            <div>
              <input type="radio" id="genero" name="genre" value="Masculino" <%= locals.old && old.genre === 'Masculino' ? 'selected' : '' %>>
              <label for="Masculino">Masculino</label>
            </div>

            <div>
              <input type="radio" id="genero" name="genre" value="Femenino" <%= locals.old && old.genre === 'Femenino' ? 'selected' : '' %>>
              <label for="Femenino">Femenino</label>
            </div>

            <div>
              <input type="radio" id="genero" name="genre" value="Sin genero" <%= locals.old && old.genre === 'Sin genero' ? 'selected' : '' %>>
              <label for="Sin genero">Sin género</label>
            </div>
          </fieldset>
          </br>
          <h5>Estoy de acuerdo con <a href="#">Terminos y Condiciones</a></h5>
          <button class="botons" type="submit"> REGISTRARME </button>
          <h6><a href="/login">¿Ya tienes una Cuenta?</a></h6>
        </section>
      </form>
    </main>

    <%- include('../partials/footer') %>