<%- include('../partials/metadata')  %> 
<%- include('../partials/header')  %> 

    
    <main>
        
        <div>
            <h1 class="lista-usuarios-titulo"> Perfil de Usuario de <%= user.name  %> <%= getUserProfile.last_name  %></h1>
            <div>
                <fieldset class="profile">
                    <ul>
                        <li>
                            <h4> Nombre: <%= user.name  %> </h4>
                            <h4> Apellido: <%= user.last_name  %> </h4>
                            <h4> E-Mail: <%= user.email  %> </h4>
                            <h4> Celular: <%= user.phone  %> </h4>
                            <h4> Fecha de Nacimiento: <%= user.birthday  %> </h4>
                            <h4> Genero: <%= user.genre  %> </h4> 
            
                        </li>                                   
                    </ul>
                    <div>                    
                        <div>                        
                            <form action="/users/edit/<%= getUserProfile.id %>" method="GET">   
                                <input type="submit" value="EDITAR USUARIO">
                            </form>                                                
                            <form action="/users/delete/<%= getUserProfile.id %>?_method=DELETE" method="POST">   
                                <input type="submit" value="BORRAR USUARIO">
                            </form>
                        </div>                     
                    </div> 
                </fieldset>    
            </div>
        </div>
    </main>

<%- include('../partials/footer')  %>  